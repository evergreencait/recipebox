@{
    Layout="Shared/_Layout.cshtml";
}

@if (@Model.Count == 0)
{
<p>We didn't find any recipes matching your search!</p>
}
<h1>Here is a list of matching recipes:</h1>
<ul>
    @foreach (var recipe in Model)
    {
        <a href="/recipes/@recipe.GetId()"><li>@recipe.GetName()</li></a>
    }
</ul>
<p><a href="/">Return home</a></p>
